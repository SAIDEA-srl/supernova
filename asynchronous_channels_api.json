{
  "asyncapi": "3.0.0",
  "info": {
    "title": "SUPERNOVA Interoperation API 1.0 asynchronous API messaging",
    "version": "1.0"
  },
  "channels": {
    "weathers": {
      "address": "supernova.weather",
      "bindings": {
        "amqp": {
          "is":"routingKey",
          "exchange": {
            "name": "topics",
            "type": "topic",
            "vhost": "supernova"
          }
        }
      },
      "messages": {
        "MessageWeatherDataRecord": {
          "$ref": "#/components/messages/MessageWeatherDataRecord"
        }
      }
    },
    "omissue": {
      "address": "supernova.omissue",
      "bindings": {
        "amqp": {
          "is":"routingKey",
          "exchange": {
            "name": "topics",
            "type": "topic",
            "vhost": "supernova"
          }
        }
      },
      "messages": {
        "MessageOmIssue": {
          "$ref": "#/components/messages/MessageOmIssue"
        }
      }
    },
    "omtask": {
      "address": "supernova.omtask.{source}.{state}",
      "bindings": {
        "amqp": {
          "is":"routingKey",
          "exchange": {
            "name": "topics",
            "type": "topic",
            "vhost": "supernova"
          }
        }
      },
      "messages": {
        "MessageOmTask": {
          "$ref": "#/components/messages/MessageOmTask"
        }
      }
    },
    "gatewayhookexecution": {
      "address": "supernova.hookcompletion.{source}",
      "bindings": {
        "amqp": {
          "is":"routingKey",
          "exchange": {
            "name": "topics",
            "type": "topic",
            "vhost": "supernova"
          }
        }
      },
      "messages": {
        "MessageGatewayHookExecution": {
          "$ref": "#/components/messages/MessageGatewayHookExecution"
        }
      }
    }
  },
  "operations": {
    "onWeatherUpdate": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/weathers"
      },
      "messages": [
        {
          "$ref": "#/channels/weathers/messages/MessageWeatherDataRecord"
        }
      ]
    },
    "onOMIssueRaised": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/omissue"
      },
      "messages": [
        {
          "$ref": "#/channels/omissue/messages/MessageOmIssue"
        }
      ]
    },
    "onOMTaskChanged": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/omtask"
      },
      "messages": [
        {
          "$ref": "#/channels/omtask/messages/MessageOmTask"
        }
      ]
    },
    "onGatewayHookExecutionChanged": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/gatewayhookexecution"
      },
      "messages": [
        {
          "$ref": "#/channels/gatewayhookexecution/messages/MessageGatewayHookExecution"
        }
      ]
    }
  },
  "components": {
    "messages": {
      "MessageWeatherDataRecord": {
        "payload": {
          "type": "object",
          "properties": {
            "DateTime": {
              "type": "string",
              "format": "date-time",
              "description": "Message creation date"
            },
            "Source": {
              "type": "string",
              "description": "Message source"
            },
            "Data": {
              "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/676b4bb1730de5ed871668d652c9a738c47907ee/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/WeatherDataRecord",
              "description": "WeatherDataRecord object"
            }
          }
        }
      },
      "MessageOmTask": {
        "payload": {
          "type": "object",
          "properties": {
            "DateTime": {
              "type": "string",
              "format": "date-time",
              "description": "Message creation date"
            },
            "Source": {
              "type": "string",
              "description": "Message source"
            },
            "Data": {
              "$ref": "supernova-extensions-datamodel.json#/components/schemas/OMTask",
              "description": "OMTask object"
            }
          }
        }
      },
      "MessageOmIssue": {
        "payload": {
          "type": "object",
          "properties": {
            "DateTime": {
              "type": "string",
              "format": "date-time",
              "description": "Message creation date"
            },
            "Source": {
              "type": "string",
              "description": "Message source"
            },
            "Data": {
              "$ref": "supernova-extensions-datamodel.json#/components/schemas/OMIssue",
              "description": "OMIssue object"
            }
          }
        }
      },
      "MessageGatewayHookExecution": {
        "payload": {
          "type": "object",
          "properties": {
            "DateTime": {
              "type": "string",
              "format": "date-time",
              "description": "Message creation date"
            },
            "Source": {
              "type": "string",
              "description": "Message source"
            },
            "Data": {
              "$ref": "supernova-extensions-datamodel.json#/components/schemas/GatewayHookExecution",
              "description": "Results of completed hook operation"
            }
          }
        }
      }
    }
  }
}
