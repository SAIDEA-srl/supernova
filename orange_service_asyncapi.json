        "OmIssue": {
          "$ref": "#/components/messages/MessageOmIssue"
        },
        "WeatherDataRecord": {
          "$ref": "#/components/messages/MessageWeatherDataRecord"
        }
      },
      "servers": [
        {
          "$ref": "#/servers/orange"
        }
      ]
    }
  },
  "servers": {
    "orange": {
      "host": "orange:orange@192.168.253.110/orange",
