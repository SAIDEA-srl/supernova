  },
  "paths": {
    "/UniMap/{source}": {
      "get": {
        "tags": [
          "UniMap"
        ],
        "summary": "Find all identifiers of a specific source",
        "parameters": [
          {
            "name": "source",
            "in": "path",
            "description": "source name",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "post": {
        "tags": [
          "UniMap"
        ],
        "summary": "Add new identifier for a specific source",
        "description": "Sample request:\r\n            \r\n    POST /UniMap/test\r\n    {\r\n        \"SourceName\": {\r\n            \"Value\": \"test\"\r\n        },\r\n        \"Identifier\": {\r\n            \"Value\": \"INV01\"\r\n        },\r\n        \"Description\": {\r\n            \"Value\": \"inverter name\"\r\n        },\r\n        \"IdentifierType\": {\r\n            \"Value\": \"Other\"\r\n        }\r\n    }",
        "parameters": [
          {
            "name": "source",
            "in": "path",
            "description": "source of identifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "AlternativeIdentifier definition",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "text/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "application/*+json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/UniMap/{source}/{existingId}": {
      "post": {
        "tags": [
          "UniMap"
        ],
        "summary": "Map a new identifier to an existing identifier",
        "description": "Sample request:\r\n            \r\n    POST /UniMap/test/INV01\r\n    {\r\n        \"SourceName\": {\r\n            \"Value\": \"otherplatform\"\r\n        },\r\n        \"Identifier\": {\r\n            \"Value\": \"INV.0001\"\r\n        },\r\n        \"Description\": {\r\n            \"Value\": \"another description\"\r\n        },\r\n        \"IdentifierType\": {\r\n            \"Value\": \"Other\"\r\n        }\r\n    }",
        "parameters": [
          {
            "name": "source",
            "in": "path",
            "description": "Source of existing indentifier or Collection UUID",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "existingId",
            "in": "path",
            "description": "Identifier to search",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "AlternativeIdentifier to add in collection",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "text/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "application/*+json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "put": {
        "tags": [
          "UniMap"
        ],
        "summary": "Update an existing Identifier",
        "description": "Sample request:\r\n            \r\n    PUT /UniMap/otherplatform/INV.0001\r\n    {\r\n        \"SourceName\": {\r\n            \"Value\": \"otherplatform\"\r\n        },\r\n        \"Identifier\": {\r\n            \"Value\": \"INV.0001-A\"\r\n        },\r\n        \"Description\": {\r\n            \"Value\": \"another description\"\r\n        },\r\n        \"IdentifierType\": {\r\n            \"Value\": \"Other\"\r\n        }\r\n    }",
        "parameters": [
          {
            "name": "source",
            "in": "path",
            "description": "Source of existing indentifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "existingId",
            "in": "path",
            "description": "Identifier to search",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "AlternativeIdentifier to update",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "text/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            },
            "application/*+json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "https://raw.githubusercontent.com/Open-Orange-Button/Orange-Button-Taxonomy/refs/heads/main/Master-OB-OpenAPI-2407-0-0.json#/components/schemas/AlternativeIdentifier"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "delete": {
        "tags": [
          "UniMap"
        ],
        "summary": "Delete an identifier",
        "parameters": [
          {
            "name": "source",
            "in": "path",
            "description": "Source of existing indentifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "existingId",
            "in": "path",
            "description": "Identifier to search",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "all",
            "in": "query",
            "description": "Optional query parameter for delete all collection",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
